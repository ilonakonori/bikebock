<div class="form-inline" style="margin-left: auto;">
  <%= form_tag rides_path, class: "form-inline m-2", method: :get do %>
    <%= select_tag(:select, options_for_select([
      ['Sort by Size', 1],
      ["Sort by Date", 2],
      ["Sort by Reviews ", 3],
      ["Sort by Difficulty", 4],
      ]), {class: 'form-control m-1'}) %>
    <div style="display: flex; justify-content: start; padding-bottom: 16px;">
    <%= text_field_tag :query,
      params[:query],
      class: "form-control m-1",
      placeholder: "Search Rides"
    %>
    <%= submit_tag "Search", :name => nil, class: "search", style: "margin-top: 6px; margin-right: 6px;" %>
  <% end %>
</div>

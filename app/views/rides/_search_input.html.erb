<div class="form-inline" style="margin-left: auto;">
  <%= form_tag rides_path, class: "form-inline", method: :get do %>
    <%= select_tag(:select, options_for_select([
      ['Sort by date created', 1],
      ["Sort by Highest Ratings", 2],
      ['Sort by av_dates Earliest', 7],
      ["Sort by Difficulty asc", 3],
      ["Sort by Difficulty desc", 4],
      ["Sort by number of people asc", 5],
      ["Sort by number of people desc", 6]
      ]), {class: 'form-control m-1'}) %>
    <div style="display: flex; justify-content: start; padding-bottom: 16px;">
    <%= text_field_tag :query,
      params[:query],
      class: "form-control m-1",
      placeholder: "Search Rides"
    %>
    <%= submit_tag "Search", :name => nil, class: "search", style: "margin-top: 6px;" %>
  <% end %>
</div>

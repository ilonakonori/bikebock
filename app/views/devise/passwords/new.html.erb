<div class="container" style="margin-top: 118px; width: 96%; background-color: #E5E5E5; padding-top: 16px !important;">
  <br>
  <div style="text-align: center; color: #000; font-weight: 600;">
    <h5 style="">Reset Your Password</h5>
    <p style="font-size: 12px; color: #fff">Fear not. We'll email you instructions to reset your password.</p>
    <hr style="width: 95%; text-align: left; margin-left: 0;">
  </div>
  <br>
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  label: false,
                  placeholder: "Your Email",
                  input_html: { autocomplete: "email" } %>
      <br>
      <div class="form-actions" style="text-align: center; margin-bottom: 24px;">
        <%= f.button :submit, "Reset password", class: "brown-btn" %>
      </div>
    </div>
  <% end %>
  
  <%- if controller_name != 'sessions' %>
    <small><p style="text-align: center; color: #fff !important;">Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), style:"font-weight: 500;" %><small><br />
  <% end %>
  <br>
</div>

<div class="container" style="background-color: #E5E5E5; padding-top: 16px !important;">
  <div style="margin: 16px; text-align: center; color: #fff; font-weight: 600;">
    <h3>Edit Profile!</h3>
      <div id='currentUserPhoto'>
        <%= cl_image_tag current_user.profile_photo.key, height: 100, width: 100, crop: :fill, style: "border-radius: 50%; box-shadow: 3px 4px 5px 0px rgba(0, 0, 0, 0.38);" %>
      </div>
      <!-- why?
      <p style="padding-top: 16px; color: #000;">PROFILE PHOTO</p>
    -->
      <div id="previewAvatar"></div>

<!--
    <hr style="width: 95%; text-align: left; margin-left: 0;"> -->
  </div>
  <br>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">


      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>


       <%= f.input :profile_photo,
                  as: :file,
                  required: false,
                  input_html: { class: 'custom-file-input'},
                  label_html: { class: 'custom-file-label' },
                  wrapper_html: { class: 'custom-file' } %>

      <%= f.input :name,
                  required: false,
                  label: false,
                  input_html: { autocomplete: "new-name" } %>

      <%= f.input :email,
                  required: false,
                  label: false,
                  input_html: { autocomplete: "email" } %>

                  <!-- <br> => again: why? -->
      <!-- about me, interests => put then for everything, i.e. profile photo, name, email..
      ... like this looks strange
      .. and this is not the way how you do it => check 'label' inside of inputs: lines 52 and 58.
      <p style="margin: 8px; color: #000; font-weight: 400;">About me:</p> -->

      <%= f.input :about_me,
                  required: false,
                  label: 'About me:',
                  input_html: { autocomplete: "new-about-me" } %>
      <!--
      <p style="margin: 8px; color: #000; font-weight: 400;">My interests:</p>-->
      <%= f.input :interests,
                  required: false,
                  label: 'My Interests:',
                  input_html: { autocomplete: "new-interests" } %>

      <%= f.input :bike_photo,
                  as: :file,
                  required: false,
                  autofocus: true,
                  input_html: { class: 'custom-file-input'},
                  label_html: { class: 'custom-file-label' },
                  wrapper_html: { class: 'custom-file' } %>

      <div id='currentBikePhoto' class='my-3'>
        <%= cl_image_tag current_user.bike_photo.key, height: 140, width: 280, crop: :fill, style: "border-radius: 16px;" %>
      </div>

      <div id="previewBike" class='my-3' style='display:flex; justify-content: center;'></div>
<!--
      <p style="margin: 8px; color: #000; font-weight: 400;">Password:</p>-->
      <%= f.input :password,
                  hint: "Leave it blank if you don't want to change",
                  label: 'Password:',
                  required: false,
                  input_html: { autocomplete: "new-password" } %>

     <!-- <p style="margin: 8px; color: #000; font-weight: 400;">Password confirmation:</p>-->
      <%= f.input :password_confirmation,
                  label: 'Password confirmation:',
                  required: false,
                  input_html: { autocomplete: "new-password" } %>

  <!--    <p style="margin: 8px; color: #000; font-weight: 400;">Current password:</p>-->
      <%= f.input :current_password,
                  required: true,
                  label: 'Current password:',
                  input_html: { autocomplete: "current-password" } %>
      <%= f.hidden_field :last_seen,
                  :value => DateTime.now %>
    </div>

      <div class="form-actions" style="text-align: center;">
        <%= f.button :submit, "Update", style: "background-color: #FDE8CD; padding: 8px 40px; border-radius: 16px; color: #000; font-weight: 600; box-shadow: 3px 4px 5px 0px rgba(0, 0, 0, 0.38);" %>
      </div>
  <% end %>
  <br>
  <p style="text-align: center; color: #fff !important;">Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p><br />
</div>

<div class="container" style="background-color: #E5E5E5; padding-top: 16px !important;">

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <div style="margin: 16px; text-align: center; color: #fff; font-weight: 600;">
        <h3 style="padding-bottom: 4px;">Edit Profile!</h3>
          <div id='currentUserPhoto' >
            <%= cl_image_tag current_user.profile_photo.key, height: 100, width: 100, crop: :fill, style: "border-radius: 50%; box-shadow: 3px 4px 5px 0px rgba(0, 0, 0, 0.38);" %>
          </div>
          <div id="previewAvatar"></div>
          <i id="photo-btn" class="fas fa-plus-circle" style="font-size: 21px; position: absolute; left: 61%; top: 11.5%; border-radius: 50%;background-color: #d2d2d2; box-shadow: 0px 0px 5px 3px rgb(0, 0, 0, 38%);"></i>
          <%= f.input :profile_photo, as: :file, label: false, input_html: { hidden: true } %>
      </div>

      <%= f.input :name,
                  required: false,
                  label: false,
                  input_html: { autocomplete: "new-name" } %>

      <%= f.input :email,
                  required: false,
                  label: false,
                  input_html: { autocomplete: "email" } %>

      <%= f.input :about_me,
                  required: false,
                  label: 'About Me:',
                  input_html: { autocomplete: "new-about-me" } %>

      <%= f.input :interests,
                  required: false,
                  label: 'My Interests:',
                  hint: 'Express yourself in #hashtags',
                  input_html: { autocomplete: "new-interests" } %>

      <%= f.input :bike_photo,
                  as: :file,
                  required: false,
                  autofocus: true,
                  input_html: { class: 'custom-file-input'},
                  label_html: { class: 'custom-file-label' },
                  wrapper_html: { class: 'custom-file' } %>

      <div id='currentBikePhoto' class='my-3'>
        <%= cl_image_tag current_user.bike_photo.key, height: 140, width: 280, crop: :fill, style: "border-radius: 16px;" %>
      </div>

      <div id="previewBike" class='my-2' style='display:flex; justify-content: center;'></div>

      <%= f.input :password,
                  hint: "Leave it blank if you don't want to change",
                  label: 'Password:',
                  required: false,
                  input_html: { autocomplete: "new-password" } %>

      <%= f.input :password_confirmation,
                  label: 'Password  Confirmation:',
                  required: false,
                  input_html: { autocomplete: "new-password" } %>

      <%= f.input :current_password,
                  required: true,
                  label: 'Current Password:',
                  input_html: { autocomplete: "current-password" } %>
      <%= f.hidden_field :last_seen,
                  :value => DateTime.now %>
    </div>

      <div class="form-actions" style="text-align: center; padding-top: 24px; margin-bottom: 48px;">
        <%= f.button :submit, "Update", class: "brown-btn" %>
      </div>
  <% end %>

  <p style="text-align: center; color: #fff !important; margin-bottom: 0 !important;">Unhappy?
    <a id="sweet-alert-demo" class="">Cancel my account</a>
    <%= link_to "", registration_path(resource_name), id: "delete-link", class: "hidden", method: :delete %></p><br />
</div>

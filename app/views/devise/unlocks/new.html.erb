<div class="container" style="margin-top: 118px; width: 96%; background-color: #E5E5E5; padding-top: 16px !important;">
 <br>
 <!-- color change ! -->
  <div style="text-align: center; color: #000; font-weight: 600;">
    <h5 style="">Resend unlock instructions</h5>
    <p style="font-size: 12px; color: #fff">Fill out the form below to have your unlock instructions sent to you again.</p>
    <hr style="width: 95%; text-align: left; margin-left: 0;">
  </div>
  <br>
  <%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>
    <%= f.full_error :unlock_token %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  label: false,
                  placeholder: "Your Email",
                  input_html: { autocomplete: "email" } %>
      <br>

    <div class="form-actions" style="text-align: center; margin-bottom: 24px;">
      <%= f.button :submit, "Send me unlock instructions", class: "brown-btn", style: "padding: 8px 24px !important;" %>
    </div>
  </div>
<% end %>
<br>
<!-- render part imp ! -->
<p style="text-align: center; color: #fff !important;">Already have an account? <%= render "devise/shared/links", style:"font-weight: 600;" %><br>
</div>

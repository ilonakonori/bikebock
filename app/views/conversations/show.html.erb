<div style="text-align: center;">
  <%= cl_image_tag current_user.profile_photo.key, height: 60, width: 60, crop: :fill, style: 'border-radius: 50%; box-shadow: 3px 4px 5px 0px rgba(0, 0, 0, 0.38);' %>
</div>
<div style="text-align: center; font-size: 3vw; font-weight: 400; padding-top: 8px;">
    <%= current_user.name %>
    <p style="font-size: 2vw; font-weight: 300;">Online â— 12 minutes ago</p>
</div>


<div class='chatbox'>

  <div class="message" id="messages" data-conversation-id="<%= @conversation.id %>">
    <% @conversation.messages.each do |message| %>
      <%= render 'messages/message', message: message %>
    <% end %>
  </div>

  <div>
    <%= simple_form_for [ @conversation, @message ], remote: true do |f| %>
      <%= f.input :content, label: false, placeholder: "Send message to ##{@conversation.opposed_user(current_user).name }" %>
      <%= f.submit '>>', class: 'myBtn' %>
    <% end %>
  </div>
</div>

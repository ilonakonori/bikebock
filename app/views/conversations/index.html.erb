<div style="padding-top: 24px;">
  <% if @conversations.blank? %>
    <div style ="position: fixed; left: 20%; top: 15%; width: 60%; text-align: center;">
      <p style="font-size: 60px;"><i class="far fa-comments"></i></p>
      <h6>No Messages Yet!</h6>
      <br>
      <p style="">Connect with someone first!</p> <!-- write smtng nice here-->
      <br>
      <%= link_to "Home", rides_path, style: "background-color: #222; padding: 8px 55px; box-shadow: 3px 4px 5px 0px rgb(0 0 0 / 38%); border-radius: 8px; color: #fff; font-weight: 500;" %>
    </div>
  <% else %>
    <div class="navbar fixed-top navbar-expand-sm navbar-light" style='right: -2%;'>
      <%= link_to search_conversations_path, style: 'color: #aaa;' do %>
        <i class="fas fa-search" style='font-size: 20px;padding-top: 3px;'></i>
      <% end %>
    </div>
    <div style='height: 90vh; overflow-y: scroll;'>
      <% @conversations.each do |c| %>
        <%= render 'conversations/conversation', c: c %>
      <% end %>
    </div>
  <% end %>
</div>

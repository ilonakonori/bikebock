<div class="<%= local_assigns[:css_message] %> message-container " id="message-<%= message.id %>" data-sender-id="<%= message.sender_id %>">
  <div class="<%= local_assigns[:css_msg] %> " >
    <!--  <small><#%= message.created_at.strftime("%b %e at %l:%M%p") %></small><br>-->
    <div style=''>
    <% if message.attachment.present? %>
      <%= cl_image_tag message.attachment.key, width: 220, crop: :fit, class: 'imgs' %>
      <br>
    <% end %>

    <%= message.content %>
    </div>
  </div>
</div>

<div id='prevDiv'></div>

<div id='loadDiv' style='display: none;'>
  <div class='line-load'></div>
  <div class='progress-load'></div>
  <p style='padding-top: 12px; color: #262626;'>...uploading</p>
</div>
